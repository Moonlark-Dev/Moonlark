<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <nav id="nav"></nav>
    <br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                {{ title }}
            </div>
            <div class="card-body">

                <form action="/user/login/verify">
                    <div class="mb-3 mt-3">
                        <label for="uid" class="form-label">{{ uid }}</label>
                        <input type="text" class="form-control" id="uid" placeholder="{{ uid_text }}" name="uid">
                        <div id="uidHelp" class="form-text">{{ uid_help }}</div>
                    </div>
                    <div class="mb-3">
                        <label for="sessionSaveTime" class="form-label">{{ save_time }}</label>
                        <select id="sessionSaveTime" class="form-select" name="sessionSaveTime">
                          <option value="1">{{ save_time_1 }}</option>
                          <option value="14">{{ save_time_14 }}</option>
                          <option value="30">{{ save_time_30 }}</option>
                          <option value="180">{{ save_time_180 }}</option>
                          <option value="360">{{ save_time_360 }}</option>
                          <option value="720">{{ save_time_720 }}</option>
                        </select>
                      </div>
                    <button type="submit" class="btn btn-primary">{{ submit }}</button>
                </form>
            </div>
        </div>
    </div>
    <script src="/script/navbar.js"></script>
</body>

</html>