<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script>

        function verify() {
            fetch('/api/is_logged_in')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok ' + response.statusText);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log(data);
                    if (!data["logged"]) {
                        alert("验证失败：请在 Moonlark 中进行验证！");
                    } else {
                        window.location.href = "/user/login/verify/success";
                    }
                })
                .catch(error => {
                    console.error('There was a problem with your fetch operation:', error);
                });
        }

    </script>
</head>

<body>
    <nav id="nav"></nav>
    <br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                {{ title }}
            </div>
            <div class="card-body" style="text-align: center;">
                {{ tip }}
                <br><br>
                <span class="h3">{{ cmd }}</span>
                <br><br>
                <a href="javascript:verify();" class="btn btn-primary">{{ ok }}</a>
                <a href="/user/login" class="btn btn-danger">{{ cancel }}</a>
            </div>
        </div>
    </div>
    <br>
    <div style="text-align: center;" class="text-secondary">{{ cookie }}</div>
    <script src="/script/navbar.js"></script>
</body>

</html>