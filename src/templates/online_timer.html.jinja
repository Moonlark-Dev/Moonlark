{% extends base %}

{% block header %}
<style>
    .timeline-container {
        margin: 20px 0;
    }
    
    .timeline-header {
        text-align: center;
        margin-bottom: 20px;
    }
    
    .timeline {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 20px;
    }
    
    .time-slot {
        display: flex;
        align-items: center;
        height: 30px;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 5px;
    }
    
    .time-label {
        width: 120px;
        text-align: right;
        padding-right: 10px;
        font-size: 12px;
        color: #666;
    }
    
    .time-bar {
        flex: 1;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
        color: white;
        text-shadow: 0 0 2px black;
    }
    
    .online {
        background-color: #007bff;
    }
    
    .offline {
        background-color: #ccc;
    }
    
    .legend {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }
    
    .legend-item {
        display: flex;
        align-items: center;
        gap: 5px;
        font-size: 12px;
    }
    
    .legend-color {
        width: 15px;
        height: 15px;
        border-radius: 3px;
    }
    
    .online-legend {
        background-color: #007bff;
    }
    
    .offline-legend {
        background-color: #ccc;
    }
</style>
{% endblock header %}

{% block body %}
<div class="timeline-container">
    <div class="timeline-header">
        <h2>{{ text.title }}</h2>
        <p>{{ text.description }}</p>
    </div>
    
    <div class="timeline">
        {% for record in records %}
        <div class="time-slot">
            <div class="time-label">
                {{ record.start.strftime('%Y-%m-%d %H:%M') }} - {{ record.end.strftime('%H:%M') }}
            </div>
            <div class="time-bar online">
                {{ text.online }}
            </div>
        </div>
        {% endfor %}
        
        {% if not records %}
        <div class="time-slot">
            <div class="time-label">
                {{ text.no_data }}
            </div>
        </div>
        {% endif %}
    </div>
    
    <div class="legend">
        <div class="legend-item">
            <div class="legend-color online-legend"></div>
            <span>{{ text.online }}</span>
        </div>
        <div class="legend-item">
            <div class="legend-color offline-legend"></div>
            <span>{{ text.offline }}</span>
        </div>
    </div>
</div>
{% endblock body %}
