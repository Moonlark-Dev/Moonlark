{% extends base %}

{% block body %}
    <div class="row">
        <div class="col">
            {% for c in categories[:len(categories) // 2] %}
                {% if c.name %}
                    <h2>{{ c.name }}</h2>
                {% endif %}
                <ul>
                    {% for command in c.commands %}
                        <li>
                            <span class="badge bg-info">{{ command.name }}</span> {{ command.description }}
                        </li>
                    {% endfor %}
                </ul>
                {% if not loop.last %}
                    <hr>
                {% endif %}
            {% endfor %}
        </div>
        <div class="col">
            {% for c in categories[len(categories) // 2:] %}
                {% if c.name %}
                    <h2>{{ c.name }}</h2>
                {% endif %}
                <ul>
                    {% for command in c.commands %}
                        <li>
                            <span class="badge bg-info">{{ command.name }}</span> {{ command.description }}
                        </li>
                    {% endfor %}
                </ul>
                {% if not loop.last %}
                    <hr>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock body %}